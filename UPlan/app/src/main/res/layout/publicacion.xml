<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/blanco"
    android:padding="20dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp" />

    <TextView

        android:id="@+id/tittles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/icon"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:padding="2dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#4d4d4d"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imagevento"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descripcion"
        android:adjustViewBounds="true"
         />

    <ImageButton
        android:id="@+id/menudots"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd= "true"
        app:srcCompat="@drawable/menu" />

    <Button
        android:id="@+id/meet"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_toStartOf="@id/assist"
        android:layout_below="@id/imagevento"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/meet" />

    <Button
        android:id="@+id/comment"
        android:layout_toEndOf="@id/assist"
        android:layout_below="@id/imagevento"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/comentario" />

    <Button
        android:id="@+id/assist"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imagevento"
        android:background="@drawable/ok" />

    <TextView
        android:id="@+id/descripcion"
        android:layout_below="@id/tittles"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

</RelativeLayout>